<!DOCTYPE html>
<html>
    <head>
        <title>Editar Contacto</title>
    </head>
    <body>
        <div class="container">
            <h3><a href="/contactos">Lista de Contactos</a> </h3>
            <h1>Editar Contacto</h1>

            <form action="/contactos/update/{{ contacto.ID_CONTACTO }}" method="post">
                <!--ID-->
                <div class="form-group row">
                    <label class="col-sm-1">ID:</label>
                    <div class="col-sm-4">
                    <input type="number" name="ID_CONTACTO" value="{{ contacto.ID_CONTACTO }}" class="form-control form-control-sm col-md-3" readonly>
                    </div>
                </div>
                <!--NOMBRES-->
                <div class="form-group row">
                    <label class="col-sm-1">Nombres:</label>
                    <div class="col-sm-9">
                    <input type="text" name="NOMBRES" value="{{ contacto.NOMBRES }}" class="form-control form-control-sm col-md-3">
                    </div>
                </div>
                <!--APELLIDOS-->
                <div class="form-group row">
                    <label class="col-sm-1">Apellidos:</label>
                    <div class="col-sm-9">
                    <input type="text" name="APELLIDOS" value="{{ contacto.APELLIDOS }}" class="form-control form-control-sm col-md-3">
                    </div>
                </div>
                <!--EMAIL-->
                <div class="form-group row">
                    <label class="col-sm-1">Email:</label>
                    <div class="col-sm-10">
                    <input type="email" name="EMAIL" value="{{ contacto.EMAIL }}" class="form-control form-control-sm col-md-3">
                    </div>
                </div>
                <!--LOGIN-->
                <div class="form-group row">
                    <label class="col-sm-1">Login:</label>
                    <div class="col-sm-4">
                    <input type="text" name="LOGIN" value="{{ contacto.LOGIN }}" class="form-control form-control-sm col-md-3">
                    </div>
                </div>
                <!--CLAVE-->
                <div class="form-group row">
                    <label class="col-sm-1">Clave:</label>
                    <div class="col-sm-5">
                    <input type="text" name="CLAVE" value="{{ contacto.CLAVE }}" class="form-control form-control-sm col-md-3">
                    </div>
                </div>

                <!--BOTON-->
                <button type="submit" class="btn btn-primary ">Actualizar</button>

            </form>
        </div>
    </body>
</html>
