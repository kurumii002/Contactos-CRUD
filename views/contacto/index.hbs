<h1>{{title}}</h1>

<h2>CRUD de Contactos con Oracle</h2>
    <p >
        <div class="container">
            <h3><a href="/contactos/create">Crear Contacto -></a></h3>
            <h1>Lista de Contactos</h1>
            {{#if contactos }}
                <table class="table table-hover table-bordered">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Nombres</th>
                            <th>Apellidos</th>
                            <th>Email</th>
                            <th>Login</th>
                            <th>Clave</th>
                        </tr>
                    </thead>
                    <tbody>
                        {{# each contactos }}
                        <tr>
                            <td><a href="/contactos/show/{{ ID_CONTACTO }}">{{ ID_CONTACTO }}</a></td>
                            <td>{{ NOMBRES }}</td>
                            <td>{{ APELLIDOS }}</td>
                            <td>{{ EMAIL }}</td>
                            <td>{{ LOGIN }}</td>
                            <td>{{ CLAVE }}</td>
                        </tr>
                        {{/each}}
                    </tbody>
                </table>
            {{~^~}}
                <div>Contactos no encontrados.</div>
            {{/if}}
        </div>
    </p>
